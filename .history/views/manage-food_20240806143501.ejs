<%- include('layout/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Manage Foods</h1>
            <div id="successMessage" class="alert alert-success text-center" style="display: none;"></div>
            <div id="errorMessage" class="alert alert-danger text-center" style="display: none;"></div>
            <div class="mb-3">
                <a class="btn btn-primary btn-lg" href="/add_food">Add Food</a>
            </div>
            <div class="table-responsive">
                <% if (allFoods && allFoods.length > 0) { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Food Name</th>
                                <th>Description</th>
                                <th>Price(Ghc)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% allFoods.forEach((food, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index + 1 %></td>
                                    <td><img src="/uploads/<%= food.image_name %>" width="50" class="img-thumbnail" alt="<%= food.title %>"></td>
                                    <td><%= food.title %></td>
                                    <td><%= food.description %></td>
                                    <td><%= food.price %></td>
                                    <td>
                                        <a href="/edit/<%= food._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= food._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No food found in the database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    function showSuccessMessage(message) {
        const successDiv = document.getElementById('successMessage');
        successDiv.textContent = message;
        successDiv.style.display = 'block';
        setTimeout(() => {
            successDiv.style.display = 'none';
        }, 10000); // Hide after 10 seconds (10000 milliseconds)
    }

    function showErrorMessage(message) {
        const errorDiv = document.getElementById('errorMessage');
        errorDiv.textContent = message;
        errorDiv.style.display = 'block';
        setTimeout(() => {
            errorDiv.style.display = 'none';
        }, 10000); // Hide after 10 seconds (10000 milliseconds)
    }

    // Check for success or error message in query parameters
    const params = new URLSearchParams(window.location.search);
    const successMessage = params.get('success');
    const errorMessage = params.get('error');

    if (successMessage) {
        showSuccessMessage(successMessage);
    }

    if (errorMessage) {
        showErrorMessage(errorMessage);
    }
</script>

<%- include('layout/footer.ejs') %>
