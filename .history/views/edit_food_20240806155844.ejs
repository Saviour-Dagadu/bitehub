<%- include('layout/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light text-center">Edit Food (<%= food.title %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update_food/<%= food._id %>" method="post" id="edit-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title">Title</label>
                            <input type="text" name="title" value="<%= food.title %>" class="form-control form-control-lg" placeholder="Enter food title" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control form-control-lg" placeholder="Description of the Food" cols="30" rows="5" required><%= food.description %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="price">Price (GHC)</label>
                            <input type="number" name="price" value="<%= food.price.toFixed(2) %>" class="form-control form-control-lg" step="0.01" required />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control form-control-lg" type="file" name="image" />
                            <img src="/uploads/<%= food.image %>" width="100" class="img-thumbnail mt-1">
                        </div>
                        <input type="hidden" name="old_image" value="<%= food.image %>">
                        <div class="mb-3">
                            <label for="category">Category</label>
                            <select name="category_id" class="form-control form-control-lg">
                                <% if (categories && categories.length > 0) { %>
                                    <% categories.forEach(function(category) { %>
                                        <option value="<%= category._id %>" <%= food.category_id.toString() === category._id.toString() ? 'selected' : '' %>><%= category.title %></option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="0">No Category Found</option>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="featured">Featured</label>
                            <div>
                                <input type="radio" name="featured" value="Yes" <%= food.featured ? 'checked' : '' %> required /> Yes
                                <input type="radio" name="featured" value="No" <%= !food.featured ? 'checked' : '' %> required /> No
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="active">Active</label>
                            <div>
                                <input type="radio" name="active" value="Yes" <%= food.active ? 'checked' : '' %> required /> Yes
                                <input type="radio" name="active" value="No" <%= !food.active ? 'checked' : '' %> required /> No
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Update Food" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div> 
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer.ejs') %>
