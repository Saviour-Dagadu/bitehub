<%- include('layout/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light text-center">Add New Food</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add_food" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control form-control-lg" placeholder="Title of the food" required />
                        </div>
                        <div class="mb-3">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control form-control-lg" placeholder="Description of the Food" cols="30" rows="5" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="price">Price</label>
                            <input type="number" name="price" class="form-control form-control-lg" step="0.01" required />
                        </div>
                        <div class="mb-3">
                            <label for="image">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label for="category">Category</label>
                            <select name="category_id" class="form-control form-control-lg">
                                <% if (categories && categories.length > 0) { %>
                                    <% categories.forEach(function(category) { %>
                                        <option value="<%= category._id %>"><%= category.title %></option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="0">No Category Found</option>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="featured">Featured</label>
                            <div>
                                <input type="radio" name="featured" value="Yes" required /> Yes
                                <input type="radio" name="featured" value="No" required /> No
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="active">Active</label>
                            <div>
                                <input type="radio" name="active" value="Yes" required /> Yes
                                <input type="radio" name="active" value="No" required /> No
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Add Food" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer.ejs') %>