<%- include('layout/header.ejs', { title: 'Login' }) %>

<!-- Background Section with Inline CSS -->
<div style="
    background-image: url('https://images.unsplash.com/photo-1567967361-6c3f1f4d7c43'); /* Food-themed background image */
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    min-height: 100vh; /* Ensures the container takes up the full viewport height */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
">
    <!-- Centered Login Form -->
    <div style="
        background-color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    ">
        <a href="#" style="
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
            text-decoration: none;
            color: #333;
            font-size: 1.5rem;
            font-weight: bold;
        ">
            <img src="/uploads/meat.png" alt="logo" style="
                width: 2rem;
                height: 2rem;
                margin-right: 0.5rem;
            ">
            BiteHub
        </a>
        <h2 style="
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
        ">Login</h2>
        <% if (message) { %>
            <div style="
                color: #dc3545;
                margin-bottom: 1rem;
            " role="alert">
                <%= message %>
            </div>
        <% } %>
        <form action="/login" method="POST" style="
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        ">
            <div style="
                margin-bottom: 1rem;
            ">
                <label for="username" style="
                    display: block;
                    margin-bottom: 0.5rem;
                    font-size: 0.875rem;
                    font-weight: 500;
                    color: #333;
                ">Username</label>
                <input type="text" id="username" name="username" placeholder="Enter Username" required style="
                    width: 100%;
                    padding: 0.5rem;
                    border: 1px solid #ced4da;
                    border-radius: 0.25rem;
                    background-color: #f9f9f9;
                    color: #333;
                ">
            </div>
            <div style="
                margin-bottom: 1rem;
            ">
                <label for="password" style="
                    display: block;
                    margin-bottom: 0.5rem;
                    font-size: 0.875rem;
                    font-weight: 500;
                    color: #333;
                ">Password</label>
                <input type="password" id="password" name="password" placeholder="••••••••" required style="
                    width: 100%;
                    padding: 0.5rem;
                    border: 1px solid #ced4da;
                    border-radius: 0.25rem;
                    background-color: #f9f9f9;
                    color: #333;
                ">
            </div>
            <div style="
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1rem;
            ">
                <div style="
                    display: flex;
                    align-items: center;
                ">
                    <input id="remember" aria-describedby="remember" type="checkbox" style="
                        width: 1rem;
                        height: 1rem;
                        border: 1px solid #ced4da;
                        border-radius: 0.25rem;
                        background-color: #f9f9f9;
                        margin-right: 0.5rem;
                    " required>
                    <label for="remember" style="
                        font-size: 0.875rem;
                        color: #555;
                    ">Remember me</label>
                </div>
                <a href="#" style="
                    font-size: 0.875rem;
                    color: #007bff;
                    text-decoration: none;
                ">Forgot password?</a>
            </div>
            <button type="submit" style="
                background-color: #007bff;
                color: white;
                border: none;
                padding: 0.5rem;
                border-radius: 0.25rem;
                width: 100%;
                cursor: pointer;
                font-size: 1rem;
                font-weight: 500;
                text-align: center;
            ">Login</button>
            <p style="
                font-size: 0.875rem;
                color: #555;
                text-align: center;
                margin-top: 1rem;
            ">
                Don’t have an account yet? <a href="#" style="
                    color: #007bff;
                    text-decoration: none;
                ">Sign up</a>
            </p>
        </form>
    </div>
</div>

<%- include('layout/footer.ejs') %>
