<%- include('layout/header.ejs', { title: 'Login' }) %>
<link rel="stylesheet" href="/public/css/login.css">

<!-- Background Section with Inline CSS -->
<div id="slideshow">

    <!-- Centered Login Form -->
    <div class="centerLogin">
        <a href="#" class="loginLink">
            <img src="/uploads/meat.png" alt="logo" class="imageLink">
            BiteHub
        </a>
        <h2 style="
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
        ">Login</h2>
        <% if (message) { %>
            <div style="
                color: #dc3545;
                margin-bottom: 1rem;
            " role="alert">
                <%= message %>
            </div>
        <% } %>
        <form action="/login" method="POST" style="
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        ">
            <div style="
                margin-bottom: 1rem;
            ">
                <label for="username" style="
                    display: block;
                    margin-bottom: 0.5rem;
                    font-size: 0.875rem;
                    font-weight: 500;
                    color: #333;
                ">Username</label>
                <input type="text" id="username" name="username" placeholder="Enter Username" required style="
                    width: 100%;
                    padding: 0.5rem;
                    border: 1px solid #ced4da;
                    border-radius: 0.25rem;
                    background-color: #f9f9f9;
                    color: #333;
                ">
            </div>
            <div style="
                margin-bottom: 1rem;
            ">
                <label for="password" style="
                    display: block;
                    margin-bottom: 0.5rem;
                    font-size: 0.875rem;
                    font-weight: 500;
                    color: #333;
                ">Password</label>
                <input type="password" id="password" name="password" placeholder="••••••••" required style="
                    width: 100%;
                    padding: 0.5rem;
                    border: 1px solid #ced4da;
                    border-radius: 0.25rem;
                    background-color: #f9f9f9;
                    color: #333;
                ">
            </div>
            <div style="
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1rem;
            ">
                <div style="
                    display: flex;
                    align-items: center;
                ">
                    <input id="remember" aria-describedby="remember" type="checkbox" style="
                        width: 1rem;
                        height: 1rem;
                        border: 1px solid #ced4da;
                        border-radius: 0.25rem;
                        background-color: #f9f9f9;
                        margin-right: 0.5rem;
                    " required>
                    <label for="remember" style="
                        font-size: 0.875rem;
                        color: #555;
                    ">Remember me</label>
                </div>
                <a href="#" style="
                    font-size: 0.875rem;
                    color: #007bff;
                    text-decoration: none;
                ">Forgot password?</a>
            </div>
            <button type="submit" style="
                background-color: #007bff;
                color: white;
                border: none;
                padding: 0.5rem;
                border-radius: 0.25rem;
                width: 100%;
                cursor: pointer;
                font-size: 1rem;
                font-weight: 500;
                text-align: center;
            ">Login</button>
            <p style="
                font-size: 0.875rem;
                color: #555;
                text-align: center;
                margin-top: 1rem;
            ">
                Don’t have an account yet? <a href="#" style="
                    color: #007bff;
                    text-decoration: none;
                ">Sign up</a>
            </p>
        </form>
    </div>
</div>

<script>
    const images = [
        '/uploads/brooke-lark-oGCF9yywFCM-unsplash.jpg',
        '/uploads/brooke-lark-R18ecx07b3c-unsplash.jpg',
        '/uploads/eaters-collective-ddZYOtZUnBk-unsplash.jpg',
        '/uploads/lily-banse--YHSwy6uqvk-unsplash.jpg'
    ];

    let currentImageIndex = 0;

    function showNextImage() {
        currentImageIndex = (currentImageIndex + 1) % images.length;
        document.getElementById('slideshow').style.backgroundImage = `url('${images[currentImageIndex]}')`;
    }

    // Change image every 5 seconds
    setInterval(showNextImage, 5000);

    // Initialize the first image
    showNextImage();
</script>

