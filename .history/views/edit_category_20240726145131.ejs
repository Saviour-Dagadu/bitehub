<%- include('layout/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light text-center">Edit Category (<%= category.name %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= category._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" value="<%= category.title %>" class="form-control form-control-lg" placeholder="Enter category title" required />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input class="form-control form-control-lg" type="file" name="image" />
                            <img src="/<%= category.image %>" width="100" class="img-thumbnail mt-1">
                        </div>
                        <input type="hidden" name="old_image" value="<%= category.image %>">
                        <div class="mb-3">
                            <label for="featured">Featured</label>
                            <div>
                                <input type="radio" name="featured" value="<%= category.featured %>" required /> Yes
                                <input type="radio" name="featured" value="<%= category.featured %>" required /> No
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="active">Active</label>
                            <div>
                                <input type="radio" name="active" value="<%= category.active %>" required /> Yes
                                <input type="radio" name="active" value="<%= category.active %>" required /> No
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Update Category" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div> 
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer.ejs') %>
