<%- include('layout/header.ejs') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <h1>Manage Admin</h1>
            <% if (message && message.type === 'success') { %>
                <div class="alert alert-success">
                    <%= message.message %>
                </div>
            <% } else if (message && message.type === 'error') { %>
                <div class="alert alert-danger">
                    <%= message.message %>
                </div>
            <% } %>
            <div class="mb-3">
                <a class="btn btn-primary btn-lg" href="/add_admin">Add Admin</a>
            </div>
            <div class="table-responsive">
                <% if (admin.length > 0) { %> 
                    <table class="table table-striped text-center my-3">
                        <thead> 
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>E-mail</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% admin.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index + 1 %></td>
                                    <td><img src="/<%= row.image %>" width="50" class="img-thumbnail" alt="Admin"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.username %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No admin found in the database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer.ejs') %>
